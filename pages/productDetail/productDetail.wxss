.goods_des_parent image{width:690rpx; background: #eee;}
.goods_des_parent .goods_right_b{width:690rpx; font-size: 32rpx; color: #666}
.cover{ line-height: 0}
.cover image{ width: 100%; height: 600rpx; background: #eee;}
.brand{ color: #666; font-size: 26rpx; margin-left: 20rpx;}

.params{margin-bottom: 30rpx;}
