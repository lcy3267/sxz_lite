
<form bindsubmit="showTopTips" data-loc="{{onloction}}" data-path="{{imagepath}}" bindreset="formReset" report-submit>

<view class='cell_top10'>
    <view class='cell_left'>
      <text class='mg'>客户姓名 : </text>
    </view>
    <view class='cell_right' style='width:{{winWidth-120}}px'>
      <input type="text" placeholder="" />
    </view>
  </view>
  <view class='cell_top2'>
    <view class='cell_left'>
      <text class='mg'>类型 : </text>
    </view>
    <view class='cell_right' style='width:{{winWidth-120}}px'>
      <picker
        mode="selector"
        class="zan-field__input zan-cell__bd"
        range="{{ area }}"
        value="{{ areaIndex }}"
        bindchange="onAreaChange"
      >
        {{ area[areaIndex] }}
      </picker>
    </view>
  </view>
  <view class='cell_top2'>
    <view class='cell_left'>
      <text class='mg'>手机号 : </text>
    </view>
    <view class='cell_right' style='width:{{winWidth-120}}px'>
      <input type="text" placeholder="" />
    </view>
  </view>
  <view class='cell_top2'>
    <view class='cell_left'>
      <text class='mg'>来源  </text>
    </view>
    <view class='cell_right' style='width:{{winWidth-120}}px'>
      <input type="text" placeholder="" />
    </view>
  </view>
  
  <view class='cell_top2'>
    <view class='cell_left'>
      <text class='mg'>描述信息 : </text>
    </view>
    <view class='cell_right' style='width:{{winWidth-120}}px'>
      <input type="text" placeholder="" />
    </view>
  </view>
  
 
</form>
 
<view class='foot'>
  <view class="">
    <view class="zan-btns">
    <navigator url='../clientadd/index?type=add'>
      <button class="zan-btn zan-btn--primary">提交</button>
      </navigator>
    </view>
  </view>
</view>